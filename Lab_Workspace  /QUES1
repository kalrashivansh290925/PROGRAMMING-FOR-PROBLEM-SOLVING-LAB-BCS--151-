//To WAP that accepts the marks of 5 subjects and find the SUM and PERCENTAGE marks obtained by the students.

#include <stdio.h>

int main()

{
	int engMaths, engPhysics, engPPS, engEVS, engElec;
	
	printf("MARKS OBTAINED IN ENGINEERING MATHEMATICS : ");
	scanf("%d", &engMaths);
	
	printf("\n\nMARKS OBTAINED IN ENGINEERING PHYSICS : ");
	scanf("%d", &engPhysics);
	
	printf("\n\nMARKS OBTAINED IN ENGINEERING PPS : ");
	scanf("%d", &engPPS);
	
	printf("\n\nMARKS OBTAINED IN ENGINEERING EVS : ");
	scanf("%d", &engEVS);
	
	printf("\n\nMARKS OBTAINED IN ELECTRICAL ENGINEERING : ");
	scanf("%d", &engElec);
	
	float sum = engMaths + engPhysics + engPPS + engEVS + engElec;
	float perc = sum / 5;
	
	printf("\n\nTOTAL MARKS OBTAINED : %.2f",sum);
	printf("\n\nPERCENTAGE : %.2f",perc);
	
	return 0;
}

